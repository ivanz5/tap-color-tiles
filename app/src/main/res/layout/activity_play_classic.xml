<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ivanzhur.tapblack.MainActivity"
    android:background="#001020" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="70dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.22">

            <TextView
                android:id="@+id/timeTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:textColor="#FFFFFF"
                android:text="0"
                android:layout_centerInParent="true"/>
            </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RowOne"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:layout_marginBottom="1dp">

            <View
                android:id="@+id/EmptyOne"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/EmptyOne"
                android:layout_toStartOf="@+id/EmptyOne"
                android:layout_marginRight="1dp"
                android:layout_marginEnd="1dp">

                <View
                    android:id="@+id/EmptyOne1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"/>

                <Button
                    android:id="@+id/RowOneBtn1"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@id/EmptyOne1"
                    android:layout_toStartOf="@+id/EmptyOne1"
                    android:layout_alignParentBottom="true"
                    android:background="#FFFFFF"
                    android:layout_marginRight="1dp"
                    android:layout_marginEnd="1dp"/>
                <Button
                    android:id="@+id/RowOneBtn2"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@id/EmptyOne1"
                    android:layout_toEndOf="@+id/EmptyOne1"
                    android:layout_alignParentBottom="true"
                    android:background="#FFFFFF"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/EmptyOne"
                android:layout_toEndOf="@+id/EmptyOne"
                android:layout_marginLeft="1dp"
                android:layout_marginStart="1dp">

                <View
                    android:id="@+id/EmptyOne2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"/>

                <Button
                    android:id="@+id/RowOneBtn3"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@id/EmptyOne2"
                    android:layout_toStartOf="@+id/EmptyOne2"
                    android:layout_alignParentBottom="true"
                    android:background="#FFFFFF"
                    android:layout_marginRight="1dp"
                    android:layout_marginEnd="1dp"/>
                <Button
                    android:id="@+id/RowOneBtn4"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@id/EmptyOne2"
                    android:layout_toEndOf="@+id/EmptyOne2"
                    android:layout_alignParentBottom="true"
                    android:background="#FFFFFF"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"/>

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RowTwo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp">

            <View
                android:id="@+id/EmptyTwo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/EmptyTwo"
                android:layout_toStartOf="@+id/EmptyTwo"
                android:layout_marginRight="1dp"
                android:layout_marginEnd="1dp">

                <View
                    android:id="@+id/EmptyTwo1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"/>

                <Button
                    android:id="@+id/RowTwoBtn1"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@id/EmptyTwo1"
                    android:layout_toStartOf="@+id/EmptyTwo1"
                    android:layout_alignParentBottom="true"
                    android:background="#FFFFFF"
                    android:layout_marginRight="1dp"
                    android:layout_marginEnd="1dp"/>
                <Button
                    android:id="@+id/RowTwoBtn2"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@id/EmptyTwo1"
                    android:layout_toEndOf="@+id/EmptyTwo1"
                    android:layout_alignParentBottom="true"
                    android:background="#FFFFFF"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/EmptyTwo"
                android:layout_toEndOf="@+id/EmptyTwo"
                android:layout_marginLeft="1dp"
                android:layout_marginStart="1dp">

                <View
                    android:id="@+id/EmptyTwo2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"/>

                <Button
                    android:id="@+id/RowTwoBtn3"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@id/EmptyTwo2"
                    android:layout_toStartOf="@+id/EmptyTwo2"
                    android:layout_alignParentBottom="true"
                    android:background="#FFFFFF"
                    android:layout_marginRight="1dp"
                    android:layout_marginEnd="1dp"/>
                <Button
                    android:id="@+id/RowTwoBtn4"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@id/EmptyTwo2"
                    android:layout_toEndOf="@+id/EmptyTwo2"
                    android:layout_alignParentBottom="true"
                    android:background="#FFFFFF"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"/>

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RowThree"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp">

            <View
                android:id="@+id/EmptyThree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/EmptyThree"
                android:layout_toStartOf="@+id/EmptyThree"
                android:layout_marginRight="1dp"
                android:layout_marginEnd="1dp">

                <View
                    android:id="@+id/EmptyThree1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"/>

                <Button
                    android:id="@+id/RowThreeBtn1"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@id/EmptyThree1"
                    android:layout_toStartOf="@+id/EmptyThree1"
                    android:layout_alignParentBottom="true"
                    android:background="#FFFFFF"
                    android:layout_marginRight="1dp"
                    android:layout_marginEnd="1dp"/>
                <Button
                    android:id="@+id/RowThreeBtn2"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@id/EmptyThree1"
                    android:layout_toEndOf="@+id/EmptyThree1"
                    android:layout_alignParentBottom="true"
                    android:background="#FFFFFF"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/EmptyThree"
                android:layout_toEndOf="@+id/EmptyThree"
                android:layout_marginLeft="1dp"
                android:layout_marginStart="1dp">

                <View
                    android:id="@+id/EmptyThree2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"/>

                <Button
                    android:id="@+id/RowThreeBtn3"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@id/EmptyThree2"
                    android:layout_toStartOf="@+id/EmptyThree2"
                    android:layout_alignParentBottom="true"
                    android:background="#FFFFFF"
                    android:layout_marginRight="1dp"
                    android:layout_marginEnd="1dp"/>
                <Button
                    android:id="@+id/RowThreeBtn4"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@id/EmptyThree2"
                    android:layout_toEndOf="@+id/EmptyThree2"
                    android:layout_alignParentBottom="true"
                    android:background="#FFFFFF"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"/>

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RowFour"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:layout_marginTop="1dp">

            <View
                android:id="@+id/EmptyFour"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/EmptyFour"
                android:layout_toStartOf="@+id/EmptyFour"
                android:layout_marginRight="1dp"
                android:layout_marginEnd="1dp">

                <View
                    android:id="@+id/EmptyFour1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"/>

                <Button
                    android:id="@+id/RowFourBtn1"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@id/EmptyFour1"
                    android:layout_toStartOf="@+id/EmptyFour1"
                    android:layout_alignParentBottom="true"
                    android:background="#FFFFFF"
                    android:layout_marginRight="1dp"
                    android:layout_marginEnd="1dp"/>
                <Button
                    android:id="@+id/RowFourBtn2"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@id/EmptyFour1"
                    android:layout_toEndOf="@+id/EmptyFour1"
                    android:layout_alignParentBottom="true"
                    android:background="#FFFFFF"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/EmptyFour"
                android:layout_toEndOf="@+id/EmptyFour"
                android:layout_marginLeft="1dp"
                android:layout_marginStart="1dp">

                <View
                    android:id="@+id/EmptyFour2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"/>

                <Button
                    android:id="@+id/RowFourBtn3"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@id/EmptyFour2"
                    android:layout_toStartOf="@+id/EmptyFour2"
                    android:layout_alignParentBottom="true"
                    android:background="#FFFFFF"
                    android:layout_marginRight="1dp"
                    android:layout_marginEnd="1dp"/>
                <Button
                    android:id="@+id/RowFourBtn4"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@id/EmptyFour2"
                    android:layout_toEndOf="@+id/EmptyFour2"
                    android:layout_alignParentBottom="true"
                    android:background="#FFFFFF"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"/>

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <!-- Score screen -->
    <LinearLayout
        android:id="@+id/scoreScreenClassic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:visibility="invisible"
        android:orientation="vertical"
        android:clickable="false">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/bestScoreTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="21sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/scoreTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:textColor="#000000"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2">

            <Button
                android:id="@+id/restartButtonClassic"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/xml_ui_button_black"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:text="@string/restart"
                android:onClick="restartClicked"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2">

            <Button
                android:id="@+id/shareButtonClassic"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/xml_ui_button_white"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="@string/share"
                android:onClick="shareClicked"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2">

            <Button
                android:id="@+id/leaderboardButtonClassic"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/xml_ui_button_black"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:text="@string/leaderboard"
                android:onClick="leaderboardClicked"/>
        </RelativeLayout>
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewClassic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
